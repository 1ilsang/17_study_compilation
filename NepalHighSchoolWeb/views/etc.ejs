<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" , initial-scale="1" />
    <title>Young Hearts Boarding High School</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link href="/stylesheets/jquery.bxslider.css" rel="stylesheet" />

    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>

</head>
<body>
   
<style type="text/css">
         @import url(http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,700,400italic);

        font-family: 'Open Sans', sans-serif;

        body {
          min-height: 3000px;
          padding-top: 70px;
          font-family: 'Open Sans', sans-serif;
        }

        .thumbnail {
            position: relative;
            padding: 0px;
            margin-bottom: 20px;
        }

        .thumbnail img {
            width: 100%;
        }
        </style>
        
    <header>
        <% include ./header %>
    </header>

        <% var totalCnt = imgList.length; %>
        <% var contentsCntPerOnePage = 9; %>
        <% var pageBarNumber = parseInt(totalCnt /contentsCntPerOnePage) ; %>
        <% if ( totalCnt % contentsCntPerOnePage == 0 ) {
            pageBarNumber -= 1;
          } %>
        <% var currentCategory = "etc"; %>

    <div class="container" id="tourpackages-carousel">
        <div class="row">
        <% var viewNum = 0;
            for(var i = totalCnt - contentsCntPerOnePage * (pageNumber * 1 - 1 ) ; i > totalCnt - contentsCntPerOnePage * (pageNumber * 1 ); i--){ 
            if (i <= 0 ) break;
            viewNum++;%>   
          <div style="width:30%; height:350px; float:left; margin:1%">
          <div class="thumbnail">
              <a href="/nav/etcBoard/<%= imgList[i-1].seq %>/?pageNumber=<%= pageNumber %>"><img src="<%= imgList[i-1].imgUrl %>" alt="" style="height: 250px"></a>
              <div class="caption" align="center">
                <h4>Title :
                <% if(imgList[i-1].title.length > 20){ %>
                        <%=  imgList[i-1].title.slice(0,20); %>&nbsp;...&nbsp;
                        <% }else { %> 
                            <%= imgList[i-1].title %>
                            <% } %>
                </h4>
                <p>Date : <%= imgList[i-1].date %></p>

            </div>
          </div>
        </div>
        <% } %>
      </div><!-- End row -->     
    </div><!-- End container -->
    <br>
    <% if ( sessionValue == "admin") { %>
        <p style="text-align : center;">
          <a href="/nav/etcInsertBoard" class="btn btn-default"  style="font-size:15px;">Write</a>
        </p>
    <% } else { %>
    <% } %>
    <!-- 
        currentPageNumber Sector  
                                  -->
       <% include ./currentPageNumber %>

    <footer>
        <% include ./footer %>
    </footer>

</body>
</html>